<!DOCTYPE html>

<html>
<head>
  <title><%= "#{controller.controller_name.gsub('_', ' ').capitalize}" %>: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'medical_office', 'lightbox' %>
  <%= javascript_include_tag :defaults, 'lightbox', 'scriptaculous' %>
  <%= calendar_date_select_includes %>
  <%= csrf_meta_tag %>
</head>
<body>
<div class="body">
  <div class="header">
    <div class="user">
      <% if user_signed_in? %>
        Signed in as <%= current_user.email %>. Not you? <%= link_to "Sign out", destroy_user_session_path %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path %>.  
      <% end %>
    </div>
  </div>
  
  <% if session[:menu_items] && session[:menu_items].any? %>
    <div class="menu">
      <div class="menu_header">
        Menu
      </div>
      <% for item in session[:menu_items] %>
        <div class="menu_item">
          <%= link_to item.name, item.url %>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <div class="content">
    <div class="area_title">
      <%= "#{controller.controller_name.gsub('_', ' ').capitalize}" %>
    </div>
    <% if flash[:notice] %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="error_title">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <%= yield %>
  </div>
</div>

</body>
</html>
