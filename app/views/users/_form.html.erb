<%= semantic_form_for(@user) do |f| %>
  <%= render "#{ApplicationHelper::GENERAL_FORM_TEMPLATES_PATH}/error_header", :object => @user %>  
  
  <%= f.inputs "Register User" do %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    
    <%= f.input :role, :collection => Role.all, :include_blank => true, :label_method => :name %>
    
  <% end %>
  
  <%= render "#{ApplicationHelper::GENERAL_FORM_TEMPLATES_PATH}/form_footer", :f => f, :action => action %>
  
<% end %>
