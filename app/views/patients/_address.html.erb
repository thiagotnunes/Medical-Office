<div class="fields">
	<li>
		<%= f.label :address_label_id, "Address <em>*</em>" %>
		<%= f.collection_select :address_label_id, AddressLabel.all, :id, :label, :include_blank => true %>
	</li>
	<li>
 		<%= f.label :location, "Location <em>*</em>" %>
 		<%= f.text_field :location %>
	</li>
 	<li>
 		<%= f.label :complement %>
 		<%= f.text_field :complement %>
	</li>
	<% if render_remove_button %>
		<div class="div_remove">
			<%= f.hidden_field :_destroy %>
			<%= link_to_remove_fields "Remove address", f %>
		</div>
	<% end %>
</div>