<div class="div_area_title">
  Listing all patients
</div>

<table class="table_index">
  <tr>
    <th>Record</th>
    <th>Name</th>
    <th>CPF</th>
    <th>RG</th>
    <th>Health Insurance</th>
    <th>Type</th>
    <th></th>
    <th></th>
  </tr>

  <% for patient in @patients %>
    <tr>
	    <td><%=h patient.record %></td>
	    <td><%=h patient.name %></td>
	    <td><%=h patient.cpf %></td>
	    <td><%=h patient.rg %></td>
	    <td><%=h patient.health_insurance.name %></td>
	    <td><%=h patient.type %></td>
      <td><%= link_to 'Show', :controller => 'patients', :action => 'show', :id => patient %></td>
      <td><%= link_to 'Destroy', patient, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
