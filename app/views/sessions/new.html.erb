<% semantic_form_for resource_name, resource, :url => session_path(resource_name) do |f| -%>
  <% f.inputs "Sign in" do %>
    <%= f.input :email %>

    <%= f.input :password %>

    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    <% end -%>

    <%= f.submit "Sign in" %>
  <% end %>
<% end -%>

<%= render :partial => "shared/devise_links" %>
