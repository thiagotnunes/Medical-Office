<table>
  <tr>
    <td>
      Name:
    </td>
    <td>
      <%=h @patient.name %>
    </td>
  </tr>
  <tr>
    <td>
      Sex:
    </td>
    <td>
      <%=h @patient.sex %>
    </td>
  </tr>
  <tr>
    <td>
      CPF:
    </td>
    <td>
      <%=h @patient.cpf %>
    </td>
  </tr>
  <tr>
    <td>
      RG:
    </td>
    <td>
      <%=h @patient.rg %>
    </td>
  </tr>
  <tr>
    <td>
      Birth Date:
    </td>
    <td>
      <%=h @patient.birth_date %>
    </td>
  </tr>
  <tr>
    <td>
      Color:
    </td>
    <td>
      <%=h @patient.color %>
    </td>
  </tr>
  <tr>
    <td>
      Profession:
    </td>
    <td>
      <%=h @patient.profession %>
    </td>
  </tr>
  <tr>
    <td>
      City:
    </td>
    <td>
      <%=h @patient.city %>
    </td>
  </tr>
  <tr>
    <td>
      State:
    </td>
    <td>
      <%=h @patient.state %>
    </td>
  </tr>
  <tr>
    <td>
      Country:
    </td>
    <td>
      <%=h @patient.country %>
    </td>
  </tr>
  <tr>
    <td>
      Health Insurance:
    </td>
    <td>
      <%=h @patient.health_insurance.name %>
    </td>
  </tr>
  <tr>
    <td>
      Health Insurance Number:
    </td>
    <td>
      <%=h @patient.health_insurance_number %>
    </td>
  </tr>

  <% if @patient.telephones.empty? %>
    <tr>
      <td colspan="2">
        No telephones
      </td>
    </tr>
  <% else %>
    <tr>
      <td colspan="2">
        Telephones:
      </td>
    </tr>
    <% for telephone in @patient.telephones %>
      <tr>
        <td>
          <%=h telephone.telephone_label.label %>
        </td>
        <td>
          <%=h telephone.number %>
        </td>
      </tr>
    <% end %>
  <% end %>

  <% if @patient.evolutions.empty? %>
    <tr>
      <td colspan="2">
        No evolutions
      </td>
    </tr>
  <% else %>
    <tr>
      <td colspan="2">
        Evolutions:
      </td>
    </tr>
    <% for evolution in @patient.evolutions %>
      <tr>
        <td>
          On <%=h evolution.attendance_date %>
        </td>
        <td>
          <%=h evolution.description %>
        </td>
      </tr>
      <% unless evolution.evolution_pictures.empty? %>
        <tr> 
          <td colspan="2">
            <% for evolution_picture in evolution.evolution_pictures %>
              <%= image_tag evolution_picture.picture.url(:thumb) %> 
            <% end %>
          </td>
        </tr>
        <% end %>
    <% end %>
  <% end %>
</table>
<%= link_to 'Edit', edit_plastic_surgery_patient_path(@patient) %> |
<%= link_to 'Back', plastic_surgery_patients_path %>
