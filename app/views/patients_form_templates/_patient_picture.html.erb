<div class="fields">
  <% if f.object.new_record? %>
    <%= f.input :picture %>
  <% else %>
	<li>
		<%= f.label :picture %>
		<%= link_to (image_tag f.object.picture.url(:thumb)), f.object.picture.url(:medium), :rel => "lightbox" %>
	</li>
  <% end %>
  <div class="remove">
    <%= f.hidden_field :_destroy %>
    <%= link_to_remove_fields "Remove Picture", f %>
  </div>
</div>
