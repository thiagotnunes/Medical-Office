<%= f.inputs "Personal Information" do %>

    <%= f.input :record %>
    <%= f.input :name %>
    <%= f.input :sex, :collection => ["Male", "Female"], :include_blank => true %>
    <%= f.input :cpf %>
    <%= f.input :rg %>
  	
  	<%= render_nested_form_patient_information_for :addresses, f %>
		<%= render_nested_form_patient_information_for :telephones, f, false %>
    
    <%= f.input :color %>
    <%= f.input :birth_date, :as => 'calendar' %>
    <%= f.input :profession %>
    <%= f.input :city %>
    <%= f.input :state, :collection => ["AC", "AL", "AP", "AM", "BA", "CE", "DF", "ES", "GO", "MA", "MT", "MS", "MG", "PA", "PB", "PR", "PE", "PI", "RJ", "RN", "RS", "RO", "RR", "SC", "SP", "SE", "TO"], :include_blank => true %>
    <%= f.input :country, :priority_countries => ["Brazil"], :include_blank => true %>
    <%= f.input :fathers_name %>
    <%= f.input :mothers_name %>
    <%= f.input :forwarded_by %>
    <%= f.input :marital_status, :collection => ["Single", "Maried", "Widower"], :include_blank => true %>
    <%= f.input :health_insurance_id, :collection => HealthInsurance.all, :label_method => :name, :include_blank => true %>
    <%= f.input :health_insurance_number %>
    
    <%= render_nested_form_patient_information_for :patient_pictures, f %>

<% end %>
