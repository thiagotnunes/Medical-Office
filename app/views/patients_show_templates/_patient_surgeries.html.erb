<fieldset class="inputs_show">
	<legend>
		Surgeries
	</legend>

	<ol>
		<% unless @patient.patient_surgeries.empty? %>
			<% for surgery in @patient.patient_surgeries %>
				<li>
					<label>Evaluations results:</label>
					<%=h surgery.evaluations_results %>
				</li>
				<li>
					<label>Indicated conduct:</label>
					<%=h surgery.indicated_conduct %>
				</li>
				<li>
					<label>CID:</label>
					<%=h surgery.cid %>
				</li>
				<li>
					<label>Surgery performed:</label>
					<%=h surgery.surgery_performed %>
				</li>
				<li>
					<label>Surgery date:</label>
					<%=h surgery.surgery_date %>
				</li>
				<li>
					<label>Surgery performed at:</label>
					<%=h surgery.surgery_performed_at %>
				</li>
				<li>
					<label>Surgery anesthethist:</label>
					<%=h surgery.surgery_anesthethist %>
				</li>
				<li>
					<label>Surgery description:</label>
					<%=h surgery.surgery_description %>
				</li>
				<li>
					<label>PO imediate result:</label>
					<%=h surgery.po_imediate_result %>
				</li>
				<li>
					<label>Intercurrences:</label>
					<%=h surgery.intercurrences %>
				</li>
				<li>
					<label>Pathology material:</label>
					<%=h surgery.pathology_material %>
				</li>
				<li>
					<label>Pathology result:</label>
					<%=h surgery.pathology_result %>
				</li>
				<li>
					<label>Diagnosis:</label>
					<%=h surgery.diagnosis %>
				</li>
			<% end %>
		<% end %>
	</ol>
</fieldset>